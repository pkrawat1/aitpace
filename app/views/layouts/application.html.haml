%html{lang: "en"}
  %head
    %link{rel: "icon", type: "image/png", href: "/assets/favicon.png"}
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{name: "aitpace 2014", content: "PACE is an event that provides an excellent opportunity for students of various colleges in Pune to get acquainted with each other, exhibit their competitive spirits and in the true spirit of sportsmanship take victory and defeat in their stride."}

    %title= content_for?(:title) ? yield(:title) : "AIT PACE 2014"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body{"style" => "background-size: cover"}
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    .contain-to-grid.sticky.centered
      %nav.top-bar{"data-topbar" => ""}
        %ul.title-area
          %li.name.medium-offset-1.large-offset-1
            %h2{style: "word-spacing: 50px"}
              %br
              Pace 2014
          %li.toggle-topbar.menu-icon
            %a 
              %span Menu
        %section.top-bar-section
          %ul.right
            %li= link_to "HOME", root_path
            %li.has-dropdown
              = link_to "EVENTS", root_path
              %ul.dropdown
                - if @events.any?
                  - @events.each do |event|
                    %li= link_to event.name.upcase, event_path(event)
            %li.has-dropdown
              = link_to "ATHLETICS", root_path
              %ul.dropdown
                - if @athletics.any?
                  - @athletics.each do |event|
                    %li= link_to event.name.upcase, athletic_path(event)
            %li.active= link_to "REGISTER", new_registration_path
            %li= link_to "CONTACT US", home_contact_path
    = yield
    .footer
      .medium-12.columns
        .medium-4.columns
          %h3 Contact Us
          .fb-like-box{height: "70px", "data-colorscheme" => "dark", "data-header" => "false", "data-href" => "http://www.facebook.com/pace2014", "data-show-border" => "false", "data-show-faces" => "false", "data-stream" => "false"}
        
        .medium-4.columns
          %h3 Events
          - if @events.any?
            -@events.each do |event|
              .medium-4.columns
                = link_to event.name, event_path(event)
        
        .medium-4.columns
          %h3 About
          %p
            Pace is an intercollegiate sports fest organized by Army Institute of Technology.
        .row
          .medium-6.medium-centered.columns
            Copyright &copy 2014 AIT pune. All Rights Reserved.
    
    = javascript_include_tag "application"
