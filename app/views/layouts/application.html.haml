!!!
%html{lang: "en"}
  %head
    %link{rel: "icon", type: "image/png", href: "/assets/favicon.png"}
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{name: "aitpace 2014", content: "PACE is an event that provides an excellent opportunity for students of various colleges in Pune to get acquainted with each other, exhibit their competitive spirits and in the true spirit of sportsmanship take victory and defeat in their stride."}

    %title= content_for?(:title) ? yield(:title) : "AIT PACE 2014"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    :javascript  
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})
      (window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-47603549-1', 'aitpace.in');
      ga('send', 'pageview');

  %body{"style" => "background-size: cover"} 
    .contain-to-grid.sticky.centered
      %nav.top-bar{"data-topbar" => ""}
        %ul.title-area
          %li.name.medium-offset-1.large-offset-1
            %h2.hide-for-small-only{style: "word-spacing: 50px"}
              %br
              Pace 2014
          %li.toggle-topbar.menu-icon
            %a 
              %span Menu
        
        %section.top-bar-section.hide-for-small-only
          %ul.right
            %li= link_to "HOME", root_path
            %li.has-dropdown
              = link_to "EVENTS", root_path
              %ul.dropdown
                - if @events.any?
                  - @events.each do |event|
                    %li= link_to event.name.upcase, event_path(event)
            %li.has-dropdown
              = link_to "ATHLETICS", root_path
              %ul.dropdown
                - if @athletics.any?
                  - @athletics.each do |event|
                    %li= link_to event.name.upcase, athletic_path(event)
            %li.active= link_to "REGISTER", new_registration_path
            %li= link_to "CONTACT US", home_contact_path
        
        %section.top-bar-section.show-for-small-only
          %ul.right
            %li= link_to "HOME", root_path, "data-no-turbolink" => true
            %li.has-dropdown
              = link_to "EVENTS", root_path, "data-no-turbolink" => true
              %ul.dropdown
                - if @events.any?
                  - @events.each do |event|
                    %li= link_to event.name.upcase, event_path(event), "data-no-turbolink" => true
            %li.has-dropdown
              = link_to "ATHLETICS", root_path, "data-no-turbolink" => true
              %ul.dropdown
                - if @athletics.any?
                  - @athletics.each do |event|
                    %li= link_to event.name.upcase, athletic_path(event), "data-no-turbolink" => true
            %li.active= link_to "REGISTER", new_registration_path, "data-no-turbolink" => true
            %li= link_to "CONTACT US", home_contact_path, "data-no-turbolink" => true
    
    = yield
    .footer
      .medium-12.columns
        .row
          .small-12.columns
            %h1 Powered By
            .small-3.small-offset-1.columns
              %a{href: "http://rahulcomputers.net/"}
                %img{src: "/assets/rc.png"}
                %span.hide-for-small-only 
                  %br
                  Rahul Computers
            .small-3.pull-1.columns
              %a{href: "http://www.sakaaltimes.com/"}
                %img{style: "padding: 13% 0", src: "/assets/st.png"}
                %span.hide-for-small-only
                  %br
                  www.sakaaltimes.com
        %hr.hide-for-small-only
        .small-12.radius.hide-for-small-only
          .small-2.large-2.columns
            %h5 Future Communications
          .small-2.large-2.columns
            %h5 GKS Engineering Enterprises
          .small-2.large-2.columns
            %h5 Kiran Caterers
          .small-2.large-2.columns
            %h5 Cherish Hospitality
          .small-2.large-2.columns
            %h5 Scientech
          .small-2.large-2.columns 
            %h5 Choice Associates
        %hr
        .small-12.medium-3.columns
          %h3 Contact Us
          %a.label.tiny{href:"https://www.facebook.com/pace2014"}
            Facebook
          %a.label.tiny.alert{href: "https://plus.google.com/114239443586673368036", rel: "publisher"}
            Google+
        
        .medium-6.columns
          %h3 Events
          %hr
          - if @events.any?
            - @events.each do |event|
              .small-4.medium-3.columns
                = link_to event.name, event_path(event)
          - if @athletics.any?
            - @athletics.each do |event|
              .small-4.medium-3.columns
                = link_to event.name, athletic_path(event)
        
        .medium-3.columns
          %h3 About
          %p
            Pace is an intercollegiate sports fest organized by 
            %a.label{href: "http://www.aitpune.com", style: "margin: auto"}Army Institute of Technology
        .row
          .medium-6.medium-centered.columns
            %hr
            .small-4.columns
              = link_to "HOME", root_path
            .small-4.columns
              = link_to "REGISTER", new_registration_path
            .small-4.columns
              = link_to "CONTACT US", home_contact_path
        %hr
        .row
          .medium-6.medium-centered.columns
            Copyright &copy 2014 AIT pune. All Rights Reserved.
    
    = javascript_include_tag "application"
    :javascript
      $(function(){
        if( !($('html').hasClass('boxsizing')) ){
          $('.boxSized, .boxSized *').each(function(){
            var fullW = $(this).outerWidth(),
            actualW = $(this).width(),
            wDiff = fullW - actualW,
            newW = actualW - wDiff;
            $(this).css('width',newW);
          });
        }
      });
