%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %title= content_for?(:title) ? yield(:title) : "AIT PACE 2014"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body{"style" => "background-size: cover"}
    .contain-to-grid.sticky
      %nav.top-bar{"data-topbar" => ""}
        %ul.title-area
          %li.name
            %h1= link_to "PACE'14", root_path
          %li.toggle-topbar.menu-icon
            %a 
              %span Menu
        %section.top-bar-section
          %ul.right
            %li= link_to "HOME", root_path
            %li.has-dropdown
              = link_to "EVENTS", root_path
              %ul.dropdown
                - if @events.any?
                  - @events.each do |event|
                    %li= link_to event.name, event_path(event)
            %li= link_to "SPONSORS", root_path
            %li.active= link_to "REGISTER", new_registration_path
            %li= link_to "CONTACT US", home_contact_path
    = yield
    = javascript_include_tag "application"
