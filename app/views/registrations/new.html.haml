.row
  .panel.form.medium-10.medium-offset-1.large-10.large-offset-1.columns
    = form_for :registration, url: registrations_path do |f|
      %h2 Your Details
      %h4 All Fields Required
      %hr
      .medium-6.large-6.columns
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label :name
          .small-9.medium-9.large-9.columns
            = f.text_field :name, required: "required", placeholder: "Enter your Name"
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label "Mobile No."
          .small-9.medium-9.large-9.columns
            = f.text_field :mob_no, required: "required", placeholder: "Eg. 8888888888" 
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label :email
          .small-9.medium-9.large-9.columns
            = f.text_field :email, type: "email", required: "required", placeholder: "Eg. example@gmail.com" 
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label :branch
          .small-9.medium-9.large-9.columns
            = f.text_field :branch, required: "required", placeholder: "Eg. B.E, T.E" 
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label :year
          .small-9.medium-9.large-9.columns
            = f.text_field :year, required: "required", placeholder: "Enter your Year" 
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label :college
          .small-9.medium-9.large-9.columns
            = f.text_field :college, required: "required", placeholder: "Name of College" 
      .medium-6.large-6.columns
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label :event
          .small-9.medium-9.large-9.columns
            = f.text_field :event, required: "required", placeholder: "Enter Event" 
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label :members
          .small-9.medium-9.large-9.columns
            = f.text_area :members, required: "required", placeholder: "Name 1, Name 2 etc." 
        %h2 Staff Details
        %hr
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label "Mobile No."
          .small-9.medium-9.large-9.columns
            = f.text_field :staff_contact, required: "required", placeholder: "Staff Mobile no." 
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label "Email"
          .small-9.medium-9.large-9.columns
            = f.text_field :staff_email, type: "email", required: "required", placeholder: "Staff Email" 
        .row.collapse
          .small-3.medium-3.large-3.columns
            %span.prefix
              = f.label "Name"
          .small-9.medium-9.large-9.columns
            = f.text_field :staff_name, required: "required", placeholder: "Name of Staff" 
        .row
          .small-4.small-offset-4.medium-4.medium-offset-4.large-4.large-offset-4
            = f.submit "Submit", class: "button primary success"
